FROM python:3.11-slim

WORKDIR /app

COPY gateway/pyproject.toml ./pyproject.toml
RUN pip install --no-cache-dir fastapi uvicorn[standard] httpx pydantic python-dotenv

COPY gateway/vrsecretary_gateway ./vrsecretary_gateway

CMD ["uvicorn", "vrsecretary_gateway.main:app", "--host", "0.0.0.0", "--port", "8000"]
